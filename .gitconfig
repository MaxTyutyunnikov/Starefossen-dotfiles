[core]
  trustctime = true
  autocrlf = false #true
  editor = vim
  excludesfile = ~/.gitignore_global

[color]
  ui = true
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red
  new = cyan

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[credential]
  helper = cache --timeout=3600

[push]
  default = simple

[alias]
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  s = status
  c = commit -v
  p = add -p
  co = checkout
  br = branch

  amend = commit -v --amend
  conflicts = diff --name-only --diff-filter=U
  staged = diff --staged
  supdate = submodule foreach git pull -f origin master
  undo = reset --soft HEAD~
  unstage = reset HEAD --

[merge]
	conflictstyle = diff3

[help]
	autocorrect = 1
